# Example
###########

docker network create jenkins --attachable

docker volume create jenkins

docker run --name jenkins --network jenkins -id -v jenkins:/var/jenkins_home -p 80:8080 --restart unless-stopped jenkins/jenkins:lts

docker run --name jenkins --network jenkins -id -v jenkins:/var/jenkins_home -p 80:8080 -v $(which docker):/usr/bin/docker -v /var/run/docker.sock:/var/run/docker.sock --restart unless-stopped jenkins/jenkins:lts


# BackUps Jenkins
docker run --rm --volumes-from jenkins -v $(pwd):/backup busybox tar cvfz /backup/backup.tar /var/jenkins_home

# Restore Jenkins container from backup, restore the volume with a tarball archive. 

docker cp $PWD/backup.tar jenkins:/var/jenkins_home

docker exec -it jenkins bash -c "cd /var/jenkins_home && tar -xzvf backup.tar && mv /var/jenkins_home/* ."


# docker run --rm --volumes-from CONTAINER -v $(pwd):/backup busybox bash -c "cd CONTAINERPATH && tar xvf /backup/backup.tar --strip 1"
